function scores = matching(file,mode)

%% reading pairs to be tested from file
f= fopen(file);
data = textscan(f,'%s %s');
fclose(f);
a = data{1,1};
b = data{1,2};
[r,c]= size(a);
scores = zeros(r,1);
blval = zeros(r,1); 
%  i = 12313;
%  score = Loc_based(a{i},b{i});
for i = 1:1:r
    if mode == 0 % using location based method
        score = Loc_based(a{i},b{i});
    else
        score = DoG_based(a{i},b{i}); %using DoG based method
    end
    scores(i) = score;
end
end
